
<div id="page_wrapper">
	

	<h1>Make something</h1>

	<%= form_for :post, url: posts_path do |f| %>

<!-- Errors to throw Start-->
		<% if @post.errors.any? %>
			<div class="errors">
				<h2><%= pluralize(@post.errors.count, "error") %> stopped this post from saving</h2>

				<ul>
					<% @post.errors.full_messages.each do |upuzi| %>
						<li><%= upuzi %></li>
					<% end %>
				</ul>	
			</div>
		<% end %>
<!-- Errors to throw End -->

		<p>
			<%= f.label :title %>
			<%= f.text_field :title %>
		</p>

		<p>
			<%= f.label :body %>
			<%= f.text_area :body %>
		</p>
		<p>
			<%= f.submit %>
		</p>

	<% end %>
</div>

